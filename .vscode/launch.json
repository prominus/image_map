    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch NodeJS Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "!**/node_modules/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "npm: build",
            "args": [
                "/home/user/image_map/input/Starfinder - Alien Archive 1.pdf",
                "/home/user/image_map/output"
            ]
        }
    ]
}